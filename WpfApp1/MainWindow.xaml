        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbInput" HorizontalAlignment="Left" Margin="192,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="575" TextChanged="TextBox_TextChanged" FontSize="20" FontFamily="Times New Roman" Height="51">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <Button Content="Вычислить" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Center" Height="55" Width="176" FontSize="20" FontFamily="Times New Roman" Click="btn_Click"/>
        <Label x:Name="lbl" Content="Результат" HorizontalAlignment="Left" Margin="67,106,0,0" VerticalAlignment="Top" Width="675" Height="50" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" FontSize="20" FontFamily="Times New Roman"><Run Text="Введите"/><Run Language="ru-ru" Text=" выражение"/></TextBlock>

    </Grid>
</Window>
